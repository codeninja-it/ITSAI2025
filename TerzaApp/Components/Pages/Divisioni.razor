@page "/divisioni"
<h3 class="text-end">Divisioni</h3>

<div class="row px-3">
    <div class="col-md-6">
        <input type="number" @bind="baseDivisione" class="form-control" />
    </div>
    <div class="col-md-6">
        <input type="number" @bind="volte" class="form-control" />
    </div>
    <div class="col-12">
        @Calcolo()
    </div>
</div>

@code {

    double baseDivisione = 2;
    double volte = 10;

    MarkupString Calcolo()
    {
        string buffer = "<ul>";
        for (int i=0; i<volte; i++)
        {
            buffer += $"<li>{baseDivisione:N2} : {i:N2} = {baseDivisione / i:N2}</li>";
        }
        return new MarkupString( buffer + "</ul>" );
    }

}
